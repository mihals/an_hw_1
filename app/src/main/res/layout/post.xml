<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootWidget"
    android:background="@android:drawable/btn_default"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/post_avatar_size"
        android:layout_height="@dimen/post_avatar_size"
        android:layout_marginStart="@dimen/common_spacing"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@+id/headerBarrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@sample/post_avatars" />

    <TextView
        android:id="@+id/author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintBottom_toTopOf="@id/published"
        app:layout_constraintEnd_toStartOf="@id/options"
        android:layout_marginStart="@dimen/common_spacing"
        android:singleLine="true"
        tools:text="Нетология. Университет интернет профессий будущего." />

    <TextView
        android:id="@+id/published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toBottomOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        android:layout_marginStart="@dimen/common_spacing"
        android:singleLine="true"
        tools:text="01.02.2022"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/options"
        style="@style/Widget.AppThem.OptionBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text = ""/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/headerBarrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="avatar"/>

    <TextView
        android:id="@+id/postContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_spacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerBarrier"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="@dimen/common_spacing"
        tools:text="@string/large_text"/>

    <ImageView
        android:id="@+id/video_banner"
        android:layout_width="match_parent"
        android:scaleType="centerInside"
        android:layout_height="240dp"
        android:src="@drawable/intent_video"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/postContent"
        android:visibility="gone"
        tools:visibility="visible"
         />

    <RadioButton
        android:id="@+id/play_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:buttonTint="@android:color/white"
        android:backgroundTint="@android:color/white"
        app:layout_constraintStart_toStartOf="@id/video_banner"
        app:layout_constraintEnd_toEndOf="@id/video_banner"
        app:layout_constraintBottom_toBottomOf="@id/video_banner"
        android:paddingBottom="@dimen/common_spacing"
        />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/video_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="play_button, video_banner"
        android:visibility="visible"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/likes"
        style="@style/Widget.AppThem.LikeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkable="true"
        app:layout_constraintTop_toBottomOf="@id/video_banner"
        app:layout_constraintStart_toStartOf="parent"
        tools:text = "100"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/share"
        style="@style/Widget.AppThem.ShareBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/video_banner"
        app:layout_constraintStart_toEndOf="@id/likes"
        tools:text = "100"/>

    <ImageView
        android:id="@+id/views"
        android:src="@drawable/ic_baseline_visibility_24"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/video_banner"
        app:layout_constraintEnd_toStartOf="@id/viewsValue"/>

    <TextView
        android:id="@+id/viewsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/video_banner"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/common_spacing"
        tools:text="45655555"/>

</androidx.constraintlayout.widget.ConstraintLayout>