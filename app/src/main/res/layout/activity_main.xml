<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/post_avatar_size"
        android:layout_height="@dimen/post_avatar_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/common_spacing"
        android:src="@mipmap/ic_launcher"
        tools:srcCompat="@sample/post_avatars" />
<!--        android:contentDescription="Author avatar." />-->
    <!--        android:src="@sample/post_avatars"-->

    <TextView
        android:id="@+id/author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintBottom_toTopOf="@id/published"
        app:layout_constraintEnd_toStartOf="@id/options"
        android:layout_marginStart="@dimen/common_spacing"
        android:singleLine="true"
        tools:text="Нетология. Университет интернет профессий будущего." />

    <TextView
        android:id="@+id/published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toBottomOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        android:layout_marginStart="@dimen/common_spacing"
        android:singleLine="true"
        tools:text="01.02.2022"/>

    <ImageButton
        android:id="@+id/options"
        android:src="@drawable/ic_options_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/common_spacing"
        android:layout_marginTop="1dp"
        android:background="@android:color/transparent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/headerBarrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="avatar,published,options"/>

    <TextView
        android:id="@+id/postContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_spacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerBarrier"
        android:padding="@dimen/common_spacing"
        tools:text="Указанные на предыдущем слайде layout
         подходят либо для простых макетов, либо требуют вкладывания одного layout в другой, усложняя иерархию интерфейса, что уменьшает производительность.В современной разработке в большинстве случаев используют ConstraintLayout (и MotionLayout для анимаций), который позволяет не увеличивать иерархию, при этом гибко настраивать сам макет.Именно его (а позже и его наследника — MotionLayout) мы и будем рассматривать." />

    <ImageView
        android:id="@+id/likes"
        android:src="@drawable/ic_baseline_favorite_border_24"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/common_spacing"
        app:layout_constraintTop_toBottomOf="@id/postContent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/likesValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/postContent"
        app:layout_constraintStart_toEndOf="@id/likes"
        tools:text="123" />

    <ImageView
        android:id="@+id/share"
        android:src="@drawable/ic_baseline_share_24"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/postContent"
        app:layout_constraintStart_toEndOf="@id/likesValue"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/shareValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/postContent"
        app:layout_constraintStart_toEndOf="@id/share"
        tools:text="456"/>

    <ImageView
        android:id="@+id/views"
        android:src="@drawable/ic_baseline_visibility_24"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/postContent"
        app:layout_constraintEnd_toStartOf="@id/viewsValue"/>

    <TextView
        android:id="@+id/viewsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/postContent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/common_spacing"
        tools:text="45655555"/>

</androidx.constraintlayout.widget.ConstraintLayout>